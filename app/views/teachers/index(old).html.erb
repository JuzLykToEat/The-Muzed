<div class="row">
	<div class="col-md-3">
		<ul class="sidebar-list">
			<li class="sidebar-item"><%= link_to "Your Listed Subjects", teachers_path, class: "sidebar-link active" %></li>
			<li class="sidebar-item"><%= link_to "Your Reservations", teachers_path, class: "sidebar-link" %></li>
		</ul>
	</div>
	<div class="col-md-9">
		<div class="panel panel-default">
			<div class="panel-heading">
				Your Listed Subjects
			</div>
			<div class="panel-body">
				
				<% @teacher.each do |teacher| %>
					<div class="row">
						<div class="col-md-2">
							<%= image_tag teacher.photos[0].image.url(:thumb) if teacher.photos.length > 0 %>
						</div>		
						<div class="col-md-7">
							<h4><%= teacher.subject %></h4>
						</div>		
						<div class="col-md-3 right">
							<%= link_to "Update", edit_teacher_path(teacher), class: "btn btn-primary" %>
						</div>		
					</div>
					<hr>
				<% end %>

			</div>
		</div>
	</div>
</div>