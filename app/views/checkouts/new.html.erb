<div class="form">
  <%= form_for(:payment, url: checkouts_path(timeslot: @timeslot.id), html: { id: "payment-form" }) do |f| %>
    <div class="form-group">
      <header>
        <h1>Please enter your payment details</h1>
        <p>
          or you can make your payment through paypal
        </p>
      </header>
    </div>

    <div class="form-group", id="dropin-container">
    </div>

    <div class="form-group">
      <h4>Amount: RM<%= @total_price %></h4>
    </div>

    <div class="form-group">
      <%= f.submit "Pay", class: "btn btn-success btn-lg" %>
    </div>
  <% end %>
</div>

<script>
  braintree.setup("<%=@client_token%>", 'dropin', {
    container: 'dropin-container',
    form: 'payment-form'
  });
</script>
